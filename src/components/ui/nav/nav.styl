@import '../../../variables'
@import '../../../mixins'

#nav
    display block
    position relative
    text-align center

    .nav-link-list
        list-style none
        margin 0
        padding 0
        font-size 0

    .nav-link-item
        display inline-block
        font-size 1.4rem
        margin rem(5px)

    .nav-link
        display block
        padding rem(10px) rem(20px)
        background $color-blue-dark
        color $color-white
        text-decoration none
        transition $transition
        &:hover
        &.active
            background-color $color-blue-light
