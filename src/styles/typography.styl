@import "../mixins"
@import "../variables"


// FONTS

font-face( 'Questa Grande', 'fonts/questa_grande', 400, normal, formats: local woff2 woff, local-font-name: 'Questa Grande' )


// ROOT

html
    font-size 62.5%

body
    font 1.6rem/1.5em $font-family-text


// HEADINGS

h1
h2
h3
    font-family $font-family-title
    font-weight normal

h1
    font-size $font-size-heading-1

h2
    font-size $font-size-heading-2

h3
    font-size $font-size-heading-3


// PARAGRAPH

p
    margin 1em 0
